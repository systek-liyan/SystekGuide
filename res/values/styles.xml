<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="text_large_black">
        <item name="android:textColor">@color/myblack</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="text_ac_title">
        <item name="android:textColor">@color/mywhite</item>
        <item name="android:textSize">25sp</item>
    </style>

    <style name="style_main_tab">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/tab_main_text</item>
        <item name="android:button">@null</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="ExhibitTitleTextAppearance">
        <item name="android:textColor">@color/exhibit_title_text_color</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ExhibitContentTextAppearance">
        <item name="android:textColor">@color/color_black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="ExhibitHintTextAppearance">
        <item name="android:textColor">@color/hint_font_color</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomProgressBar" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/custom_progress_bar</item>
        <item name="android:layout_width">21dp</item>
        <item name="android:layout_height">21dp</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="MapMenuStyle">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="MapMenuAnimationStyle">
        <item name="android:windowEnterAnimation">@anim/slide_right_in</item>
        <!-- 指定显示的动画xml -->
        <item name="android:windowExitAnimation">@anim/slide_left_out</item>
        <!-- 指定消失的动画xml -->
    </style>

    <style name="tab_top_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:textColor">@color/tab_top_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:textSize">15sp</item>
    </style>
    
    <style name="toggle_btn">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/toggle_btn_bg</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:minWidth">50dp</item>
        <item name="android:minHeight">30dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:textColor">@color/btn_text_color</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>